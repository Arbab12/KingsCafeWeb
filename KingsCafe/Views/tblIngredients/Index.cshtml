@model IEnumerable<KingsCafe.Models.tblIngredient>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Index</h2>

<p>
    <a href="@Url.Action("Create","tblIngredients")" class="btn btn-primary"> Create Food Ingredients </a>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.INGREDIENT_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.INGREDIENT_PRICE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.INGREDIENT_UNIT_PRICE)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.INGREDIENT_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.INGREDIENT_PRICE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.INGREDIENT_UNIT_PRICE)
        </td>
        <td>
            <a href="@Url.Action("edit","tblIngredients",new { id=item.INGREDIENT_ID })" class="btn btn-primary glyphicon glyphicon-edit"></a> |
            <a href="@Url.Action("details","tblIngredients",new { id=item.INGREDIENT_ID })" class="btn btn-success glyphicon glyphicon-book"></a> |
            <a href="@Url.Action("delete","tblIngredients",new { id=item.INGREDIENT_ID })" class="btn btn-danger glyphicon glyphicon-remove"></a>
        </td>
    </tr>
}

</table>
